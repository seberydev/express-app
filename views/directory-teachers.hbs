<center>
  <div class="container p-4">
    <div class="card">
      <div class="card-header">
        <h1>Maestros</h1>
      </div>
      <div class="form-outline p-3 pb-0">
        <input
          type="search"
          id="busqueda"
          class="form-control"
          placeholder="Buscar por matrícula"
          aria-label="Search"
        />
      </div>
      <div class="card-body">
        {{#if tdir}}
          <table class="table table-sm" id="table">
            <thead>
              <tr class="text-center">
                <th scope="col">Nombre</th>
                <th scope="col">Correo</th>
                <th scope="col">Telefono</th>
                <th scope="col">Matricula</th>
                <th scope="col">Opciones</th>
              </tr>
            </thead>
            <tbody class="text-center" id="directoryContainer">
              {{#each tdir}}
                <tr id={{this.id}} class="dynamic">
                  <td>{{this.name}} {{this.last_name}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.phone}}</td>
                  <td class="id">{{this.id}}</td>
                  <td><a
                      class="btn btn-danger btn-sm"
                      href="/delete-teacher/{{this._id}}"
                    >
                      Borrar
                    </a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <h4>No hay información</h4>
        {{/if}}
      </div>
      <div class="card-footer">
        <a href="/new-info-teacher" class="btn btn-primary">
          Agregar información
        </a>
        <a href="/" class="btn btn-dark">
          Volver a Inicio
        </a>
        <input
          class="btn btn-dark"
          type="button"
          name="png"
          id="png"
          value="Descargar Directorio"
        />
      </div>
    </div>
  </div>
</center>