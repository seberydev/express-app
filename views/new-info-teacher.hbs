<div class="container mt-2">
  <div class="card">
    <div class="card-header">
      <center>
        <h1>Agregar Maestro</h1>
      </center>
    </div>
    <form class="card-body" method="post" action="/new-info-teacher">
      <input
        class="form-control"
        type="text"
        name="name"
        id="name"
        placeholder="Nombres"
      />
      <br />
      <input
        class="form-control"
        type="text"
        name="last_name"
        id="last_name"
        placeholder="Apellidos"
      />
      <br />
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        placeholder="Correo"
      />
      <br />
      <input
        class="form-control"
        type="text"
        name="phone"
        id="phone"
        placeholder="Telefono"
      />
      <br />
      <input
        class="form-control"
        type="text"
        name="id"
        id="id"
        placeholder="Matricula"
      />
      <br />
      <center>
        <a href="/" class="btn btn-primary">
          Inicio
        </a>
        <input class="btn btn-success" type="submit" value="Agregar" />
      </center>
    </form>
  </div>
</div>