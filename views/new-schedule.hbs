<div class="container mt-2">
  <div class="card">
    <div class="card-header">
      <center>
        <h1>Agregar Horario</h1>
      </center>
    </div>
    <form class="card-body" action="/new-schedule" method="POST">
      <label class="form-label">Semestre a asignar:</label>
      <select class="form-select" id="semester" name="semester">
        <option value="1ero">Primero</option>
        <option value="3ero">Tercero</option>
      </select>
      <br />
      <label class="form-label">Seleccionar Materia:</label>
      <select class="form-select" name="subject" id="subject">
        <optgroup label="Primero">
          <option value="Fundamentos de Programación">Fundamentos de
            Programación</option>
          <option value="Destrezas del Aprendizaje">Destrezas del Aprendizaje</option>
          <option value="Matemáticas I">Matemáticas I</option>
          <option
            value="Introducción a la Ingeniería en Sistemas
            Computacionales"
          >Introducción a la Ingeniería en Sistemas Computacionales</option>
          <option value="Electricidad y Magnetismo">Electricidad y Magnetismo</option>
          <option value="Desarrollo de Entorno de Videojuegos">Desarrollo de
            Entorno de Videojuegos</option>
        </optgroup>
        <optgroup label="Tercero">
          <option
            value="Introducción a las
            Bases de Datos"
          >Introducción a las Bases de Datos</option>
          <option value="Programación II">Programación II</option>
          <option value="Redes I">Redes I</option>
          <option value="Integración y Programación de Videojuegos">Integración
            y Programación de Videojuegos</option>
          <option value="Matemóticas III">Matemóticas III</option>
        </optgroup>
      </select>
      <br />
      <label class="form-label" for="teacher">Seleccionar Maestros:</label>
      <select class="form-select" name="teacher" id="teacher">
        {{#each tdir}}
          <option value="{{this.name}} {{this.last_name}}">{{this.name}}
            {{this.last_name}}</option>
        {{/each}}
      </select>
      <br />
      <label class="form-label" for="hour">Horario:</label>
      <select class="form-select" name="hour" id="hour">
        <option value="9:00 - 11:00">9:00 - 11:00</option>
        <option value="11:30 - 13:30">11:30 - 13:30</option>
      </select>
      <br />
      <center>
        <a class="btn btn-primary" href="/">Inicio</a>
        <input class="btn btn-success" type="submit" value="Crear" />
      </center>
    </form>
  </div>
</div>